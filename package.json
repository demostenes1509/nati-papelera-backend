{
  "name": "backend-nati",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=dev nest start",
    "start:dev": "nest start --watch",
    "start:debug": "NODE_ENV=dev nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "TZ=utc NODE_ENV=test mocha --transpile-only --exit --require ts-node/register test/test.entrypoint.ts",
    "test:cov": "TZ=utc NODE_ENV=test nyc --reporter=lcov mocha --transpile-only --exit -R spec test/test.entrypoint.ts",
    "db:migrate": "NODE_ENV=dev npx knex --knexfile src/migrations/knexfile.ts migrate:latest",
    "db:migrate:test": "NODE_ENV=test npx knex --knexfile src/migrations/knexfile migrate:latest",
    "make:migration": "node --require ts-node/register src/migrations/make.ts",
    "make:seed": "npx knex seed:make",
    "db:rollback": "NODE_ENV=dev npx knex --knexfile src/migrations/knexfile.ts migrate:rollback",
    "db:rollback:test": "NODE_ENV=test npx knex --knexfile src/migrations/knexfile.ts migrate:rollback",
    "db:seed": "NODE_ENV=dev npx knex --knexfile src/migrations/knexfile.ts seed:run",
    "db:seed:test": "NODE_ENV=test npx knex --knexfile src/migrations/knexfile.ts seed:run"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.13",
    "@nestjs/core": "^7.6.13",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.14",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/typeorm": "^7.1.5",
    "@types/expect": "^24.3.0",
    "@types/faker": "^5.1.7",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dotenv-flow": "^3.2.0",
    "expect": "^26.6.2",
    "faker": "^5.4.0",
    "getenv": "^1.0.0",
    "knex": "^0.95.2",
    "knex-migrate-sql-file": "^1.0.3",
    "nest-router": "^1.0.9",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.31",
    "typeorm-transactional-cls-hooked": "^0.1.20",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.6",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.13",
    "@types/node": "^14.14.31",
    "@types/passport-jwt": "^3.0.5",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5"
  }
}
